<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * Eye4fraud Connector Magento Module
 *
 * @category    Eye4fraud
 * @package     Eye4fraud_Connector
 */
-->
<config>
    <modules>
        <Eye4Fraud_Connector>
            <version>1.2.5</version>
        </Eye4Fraud_Connector>
    </modules>
    <global>
        <helpers>
            <eye4fraud_connector>
                <class>Eye4Fraud_Connector_Helper</class>
            </eye4fraud_connector>
        </helpers>
        <events>
            <controller_action_predispatch_adminhtml_sales_order_index>
                <observers>
                    <connector_observer>
                        <type>singleton</type>
                        <class>Eye4Fraud_Connector_Model_Observer</class>
                        <method>sendRequestsManual</method>
                    </connector_observer>
                </observers>
            </controller_action_predispatch_adminhtml_sales_order_index>
            <sales_order_place_after>
                <observers>
                    <connector_observer>
                        <type>singleton</type>
                        <class>Eye4Fraud_Connector_Model_Observer</class>
                        <method>orderPlacedAfter</method>
                    </connector_observer>
                </observers>
            </sales_order_place_after>
            <admin_system_config_changed_section_eye4fraud_connector>
                <observers>
                    <mymodule>
                        <type>singleton</type>
                        <class>Eye4Fraud_Connector_Model_Observer</class>
                        <method>checkSoapClient</method>
                    </mymodule>
                </observers>
            </admin_system_config_changed_section_eye4fraud_connector>
            <sales_order_grid_collection_load_after>
                <observers>
                    <connector_observer>
                        <type>singleton</type>
                        <class>Eye4Fraud_Connector_Model_Observer</class>
                        <method>prepareFraudStatuses</method>
                    </connector_observer>
                </observers>
            </sales_order_grid_collection_load_after>
            <!--<sales_order_resource_init_virtual_grid_columns>-->
                <!--<observers>-->
                    <!--<eye4fraud_salesgrid>-->
                        <!--<model>eye4fraud_connector/observer_sales_grid</model>-->
                        <!--<method>addColumnToResource</method>-->
                    <!--</eye4fraud_salesgrid>-->
                <!--</observers>-->
            <!--</sales_order_resource_init_virtual_grid_columns>-->
        </events>
        <models>
            <eye4fraud_connector>
                <class>Eye4Fraud_Connector_Model</class>
                <resourceModel>eye4fraud_connector_resource</resourceModel>
            </eye4fraud_connector>
            <eye4fraud_connector_resource>
                <class>Eye4Fraud_Connector_Model_Resource</class>
                <entities>
                    <status>
                        <table>fraud_status</table>
                    </status>
                    <requests_cache>
                        <table>eye4fraud_requests_cache</table>
                    </requests_cache>
                </entities>
            </eye4fraud_connector_resource>
            <paygate>
                <rewrite>
                    <authorizenet>Eye4Fraud_Connector_Model_Authorizenet</authorizenet>
                </rewrite>
            </paygate>
            <paypal>
                <rewrite>
                    <payflowpro>Eye4Fraud_Connector_Model_Payflowpro</payflowpro>
                </rewrite>
            </paypal>
            <paypaluk>
                <rewrite>
                    <api_nvp>Eye4Fraud_Connector_Model_PaypalUk_Api_Nvp</api_nvp>
                    <api_express_nvp>Eye4Fraud_Connector_Model_PaypalUk_Api_Nvp</api_express_nvp>
                </rewrite>
            </paypaluk>
        </models>
        <resources>
            <eye4fraud_setup>
                <setup>
                    <module>Eye4Fraud_Connector</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </eye4fraud_setup>
        </resources>
        <!--<blocks>-->
            <!--<adminhtml>-->
                <!--<rewrite>-->
                    <!--<sales_order_grid>Eye4Fraud_Connector_Block_Sales_Order_Grid</sales_order_grid>-->
                <!--</rewrite>-->
            <!--</adminhtml>-->
        <!--</blocks>-->
    </global>
    <default>
        <eye4fraud_connector>
            <general>
                <enabled>1</enabled>
                <update_limit>7</update_limit>
                <update_limit_no_order>2</update_limit_no_order>
            </general>
            <cron_settings>
                <enabled>1</enabled>
                <update_interval>10</update_interval>
            </cron_settings>
        </eye4fraud_connector>
    </default>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <eye4fraud after="Mage_Adminhtml">Eye4Fraud_Connector</eye4fraud>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <eye4fraud_connector>
                    <files>
                        <module>Eye4Fraud_Connector.csv</module>
                    </files>
                </eye4fraud_connector>
            </modules>
        </translate>
        <layout>
            <!-- layout upgrade configuration -->
            <updates>
                <eye4fraud_salesgrid module="Eye4Fraud_Connector">
                    <file>eye4fraud/salesgrid.xml</file>
                </eye4fraud_salesgrid>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <eye4fraud_connector>
                    <files>
                        <module>Eye4Fraud_Connector.csv</module>
                    </files>
                </eye4fraud_connector>
            </modules>
        </translate>
    </frontend>
    <crontab>
        <jobs>
            <eye4fraud_refresh>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>eye4fraud_connector/observer::cronRefreshStatus</model>
                </run>
            </eye4fraud_refresh>
        </jobs>
    </crontab>
</config>