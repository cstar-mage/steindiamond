<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ideal_Ringbuilder>
            <version>1.0.0</version>
        </Ideal_Ringbuilder>
    </modules>
    <frontend>
        <routers>
            <ringbuilder>
                <use>standard</use>
                <args>
                    <module>Ideal_Ringbuilder</module>
                    <frontName>ringbuilder</frontName>
                </args>
            </ringbuilder>
        </routers>
        <layout>
            <updates>
                <ringbuilder>
                    <file>ringbuilder.xml</file>
                </ringbuilder>
            </updates>
        </layout>
        <events>
           <checkout_cart_product_add_after>
           		<observers>
                    <ringbuilder_action>
                        <class>ringbuilder/observer</class>
                        <method>addDiamondToCartEvent</method>
                    </ringbuilder_action>
                </observers>
           </checkout_cart_product_add_after>
        </events>
    </frontend>
    <global>
        <models>
            <ringbuilder>
                <class>Ideal_Ringbuilder_Model</class>
                <resourceModel>ringbuilder_mysql4</resourceModel>
            </ringbuilder>
            <ringbuilder_mysql4>
                <class>Ideal_Ringbuilder_Model_Mysql4</class>
            </ringbuilder_mysql4>
        </models>
        <resources>
            <ringbuilder_setup>
                <setup>
                    <module>Ideal_Ringbuilder</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ringbuilder_setup>
            <ringbuilder_write>
              <connection>
                <use>core_write</use>
              </connection>
            </ringbuilder_write>
            <ringbuilder_read>
              <connection>
                <use>core_read</use>
              </connection>
            </ringbuilder_read>
        </resources>
        <blocks>
            <ringbuilder>
                <class>Ideal_Ringbuilder_Block</class>
            </ringbuilder>
        </blocks>
        <helpers>
            <ringbuilder><class>Ideal_Ringbuilder_Helper</class></ringbuilder>
        </helpers>
    </global>
</config>