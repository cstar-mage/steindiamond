<?xml version="1.0"?>
<config>
    <tabs>
        <ideal translate="label" module="dyncatprod">
            <label>ideal</label>
            <sort_order>10000000</sort_order>
        </ideal>
    </tabs>
    <sections>
        <dyncatprod translate="label" module="dyncatprod">
			<label>Dynamic Cat Products</label>
            <tab>ideal</tab>
            <frontend_type>text</frontend_type>
            <sort_order>342</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <index translate="label">
                    <label>Indexing Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <disabled translate="label">
                            <label>Disable Indexing</label>
                            <comment><![CDATA[Disable Indexing use in Frontend - disabling this may break product count in navigation on some magento versions]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </disabled>
                    </fields>
                </index>
                <vertnav translate="label">
                    <label>Vertical Navigation Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <roots translate="label">
                            <label>Root Categories</label>
                            <comment><![CDATA[Fill in URL keys, one line each. Default value:<br/>new-arrivals<br/>sale]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </roots>
                    </fields>
                </vertnav>
            </groups>
        </dyncatprod>
    </sections>
</config>
